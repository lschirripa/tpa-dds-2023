<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Flexbox Layout</title>
    <title>Chart Example</title>
    <!-- Include Chart.js library -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>

<header>
    <nav>
        <ul class="nav-links">
            <li class="button"><a href="/listar_incidentes/listar_incidentes/">Listar
                Incidentes</a></li>
            <li class="button"><a href="/comunidades">Ir a Comunidades</a></li>
            <li class="button"><a href="/servicios">Ir a Servicios</a></li>
            <li class="button"><a href="/serviciosasociados">Ir a Servicios Asociados</a></li>
            <li class="button"><a href="/recomendador">Recomendador Fusion de Comunidades</a>
            </li>
            <li class="button"><a href="/fusionador">Fusionador de Comunidades</a></li>
            <li class="button"><a href="/reguladoras/carga-masiva">Carga Masiva de Reguladoras</a>
            </li>
            <li class="button"><a href="/rankings">Rankings</a></li>
            <li class="button"><a href="/establecimientos">Establecimientos</a></li>
            <li class="button"><a href="/lineas">Linea</a></li>
            <li class="button"><a href="/organizaciones">Organizacion</a></li>
        </ul>
    </nav>
</header>

<div class="main-content">
    <div class="box">
        <canvas id="myChart"></canvas>
    </div>
    <div class="box">
        <canvas id="myLineChart"></canvas>
    </div>
    <div class="box">
        <canvas id="myDoughnutChart"></canvas>
    </div>
    <div class="box">
        <canvas id="myBubbleChart"></canvas>
    </div>
</div>



<script>
    // Your Chart.js script
    const ctx = document.getElementById('myChart');

    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
            datasets: [{
                label: '# of Votes',
                data: [12, 19, 3, 5, 2, 3],
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });
</script>


<script>
    const ctxLine = document.getElementById('myLineChart');

    new Chart(ctxLine, {
        type: 'line',
        data: {
            labels: ['January', 'February', 'March', 'April', 'May', 'June'],
            datasets: [{
                label: 'Sales',
                data: [20, 40, 10, 30, 15, 25],
                borderColor: 'blue',
                borderWidth: 1,
                fill: false
            }]
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    });

</script>


<script>
    const ctxDoughnut = document.getElementById('myDoughnutChart');

    new Chart(ctxDoughnut, {
        type: 'doughnut',
        data: {
            labels: ['Chrome', 'Firefox', 'Edge', 'Safari', 'Others'],
            datasets: [{
                label: 'Browser Market Share',
                data: [40, 25, 15, 10, 10],
                backgroundColor: ['blue', 'orange', 'green', 'purple', 'gray'],
                borderWidth: 1
            }]
        },
        options: {
            // Additional options specific to Doughnut chart if needed
        }
    });



</script>

<script>
    const ctxBubble = document.getElementById('myBubbleChart');

    new Chart(ctxBubble, {
        type: 'bubble',
        data: {
            datasets: [{
                label: 'Countries',
                data: [
                    { x: 20, y: 30, r: 15 },
                    { x: 40, y: 10, r: 10 },
                    { x: 30, y: 20, r: 25 },
                    { x: 15, y: 40, r: 18 },
                    { x: 50, y: 35, r: 30 }
                ],
                backgroundColor: 'blue',
                borderWidth: 1
            }]
        },
        options: {
            scales: {
                x: {
                    type: 'linear',
                    position: 'bottom'
                },
                y: {
                    type: 'linear',
                    position: 'left'
                }
            }
        }
    });


</script>
</body>
<button>
    <a href="/init" class="asd">Volver</a>
</button>
</html>
